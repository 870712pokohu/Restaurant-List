<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img
          src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt="我的餐廳清單"
        />
        我的餐廳清單
      </a>
      <a
        href="/"
        class="navbar-button pt-2 pb-2 ps-3 pe-3 rounded"
        style="text-decoration: none; background-color:#226089; color:aliceblue;"
      >
        Back to Display View
      </a>
    </div>
  </nav>
  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            value="{{keyword}}"
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="addRestaurant mb-5 text-center">
      <a
        href="/restaurants/editor/new"
        class="p-3 rounded"
        style="text-decoration: none; font-size:20px; background-color: #fce2cf; color: #9b4b4b;"
      >
        <i class="fa-solid fa-bowl-food me-1"></i>
        <span>Add New Restaurant</span>
      </a>
    </div>
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants as |restaurant|}}
          <div class="card mb-3 ps-0 pe-0">
            <a
              href="/restaurants/editor/{{restaurant.id}}"
              class="text-secondary"
            >
              <img
                class="card-img-top"
                src="{{restaurant.image}}"
                alt="{{restaurant.name}}"
              />
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{restaurant.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>
                  {{restaurant.category}}
                </div>
                <span class="badge rounded-pill bg-danger font-weight-normal">
                  {{restaurant.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </a>
            <div class="p-3 pt-1 pb-1 text-end">
              <a
                href="/restaurants/editor/{{restaurant.id}}/edit"
                class="me-2"
              >Edit</a>
              <a
                href="/restaurants/editor/{{restaurant.id}}/detail"
                class="me-2"
              >Detail</a>
              <form
                action="/restaurants/editor/{{restaurant.id}}?_method=DELETE"
                method="post"
                style="display: inline-block;"
              >
                <button type="submit">Delete</button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>