 <header>
 <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<h1 class="mb-1 restaurant-show-title">{{singleRestaurant.nameEN}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{singleRestaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{singleRestaurant.location}}
        <a href="{{singleRestaurant.googleMap}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{singleRestaurant.phone}}
      </p>

      <p class="mb-5">
        <span class="text-secondary">
          <i class="fas fa-book pr-2"></i>
          描述：
        </span>
        {{singleRestaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100"
        src="{{singleRestaurant.image}}" alt="{{singleRestaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>